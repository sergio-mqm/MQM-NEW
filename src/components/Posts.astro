---
let res = await fetch("https://sub.maqma.mx/wp-json/wp/v2/posts")
let posts = await res.json();
--- 

<section>
<h1 class="title_services">our services</h1>
    {
      posts.map((post) => (
        <article class="services_link"
          <h2>
            <a href={`/dinos/${post.slug}/`} set:html={post.title.rendered} />
          </h2>
          <Fragment set:html={post.content.rendered} />
        </article>
      ))
    }
  </section>



<style is:global>
    .title_services{
        @apply bg-gradient-to-b from-blue-600 via-green-500 to-indigo-400 inline-block text-transparent bg-clip-text; 
    }
    
    </style>  